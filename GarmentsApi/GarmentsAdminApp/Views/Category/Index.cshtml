@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
  @*  @Html.ActionLink("Create New", "Create")*@
</p>
<table id ="grid" class="table table-striped table-bordered table-responsive table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ParentCatId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ParentCatId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit",null, new { id=item.CategoryId  , @class = "btn glyphicon glyphicon-pencil"}) |
            @Html.ActionLink("Details", "Details",null , new { id=item.CategoryId , @class="btn btn-info"}) |
            @Html.ActionLink("Delete", "Delete", null, new { id=item.CategoryId, @class="glyphicon glyphicon-trash" })
        </td>
    </tr>
}

</table>
