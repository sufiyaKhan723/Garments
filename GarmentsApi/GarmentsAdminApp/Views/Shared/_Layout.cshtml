<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet"  type="text/css" />
        <script "@Url.Content("~/Scripts/bootstrap.js")" type ="text/javascript"  ></script>
       @* <link href="@Url.Content("~/Views/Category/Content/category.css")" rel="stylesheet" type="text/css" />*@
        @Styles.Render("~/Content/css/Category")

        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header  >
            <table class="heading1">
                <tr>
                    <td>
                        <div>
                            <div class="float-left">
                                <img src="/Images/5Foldfashion.png" id="img1" style="height: 120px" />
                            </div>
                            <div>
                                <p class="site-title">@Html.ActionLink("5FoldFashion.com", "Index", "Home")</p>
                            </div>
                            <div class="float-right">
                                <section id="login">
                                    @Html.Partial("_LoginPartial")
                                </section>
                                <nav>
                                    <ul id="menu">
                                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                        <li>@Html.ActionLink("About", "About", "Home")</li>
                                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                        
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </td>
                </tr>
            </table>
            <div>
           <ul id="tabs">
               <li>@Html.ActionLink("Home", "Index", "Home")</li>
               <li>@Html.ActionLink("About", "About", "Home")</li>
               <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
               <li>@Html.ActionLink("Category", "Create", "Category")</li>
               <li>@Html.ActionLink("Product", "Create", "Product")</li>
           </ul>
       </div>
        </header>
       
        <div id="body">
            @RenderSection("featured", required: false)
            <div>
                <div class ="float-left">
                    <ul id="t">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>
                <div >
                    <section class="content-wrapper main-content clear-fix" style ="border :2px solid black; background-color:#696969">
                        @RenderBody()
                    </section>
                </div>
            </div>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
